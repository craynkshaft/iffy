

<style type="text/css">
	.bg {
	width: 100%;
	background-image: url(<%= @mood.photo %>);
	background-size: cover;
	background-repeat: no-repeat;
	background-color: #000;
}

.bg:before {
  content: "";
  position: fixed;
  z-index: -1;
  
  background-image: url(<%= @mood.photo %>);
  background-size: cover;
  width: 100%;
  height: 800px;
  
  -webkit-filter: blur(5px);
  -moz-filter: blur(5px);
  -o-filter: blur(5px);
  -ms-filter: blur(5px);
  filter: blur(5px);
}
/*header {
	visibility: hidden;
}*/
body {
	margin-top: -50px;
}
</style>

 <!-- Go to www.addthis.com/dashboard to customize your tools -->
<!--<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=craynkshaft"></script>-->

<!-- not sure we need the data-target below -->
<div class="container" data-toggle="modal" data-target="#myModal">


	<br>
	 <%#= @mood.created_at %> <br>

<% if @mood.searchYelp(current_user).businesses.length > 0 %>

<p class="intro">You chose <em><%= @mood.name %></em>, so we recommend</p>
<div class="yelp-image"><img src="<%= @mood.searchYelp(current_user).businesses[0].image_url[0..-7] %>o.jpg"></div>
<div class="name"><%= @mood.searchYelp(current_user).businesses[0].name %></div>
<div class="address"><%= @mood.searchYelp(current_user).businesses[0].location.display_address[0] %></div><br>
<%= image_tag @mood.searchYelp(current_user).businesses[0].rating_img_url_large %> <span class="address"><%= @mood.searchYelp(current_user).businesses[0].review_count %> reviews</span>
<%= current_user.traveling ? ((@mood.searchYelp(current_user).businesses[0].distance(current_user.latitude, current_user.longitude)) * 0.00062137).round(1) : ((@mood.searchYelp(current_user).businesses[0].distance(current_user.zip.to_s.to_lat, current_user.zip.to_s.to_lon)) * 0.00062137).round(1) %> miles away

<%#= @mood.searchYelp(current_user).businesses[0].location.coordinate.latitude %>
<%#= @mood.searchYelp(current_user).businesses[0].location.coordinate.longitude %>
<br>
<%#= @mood.searchYelp(current_user).businesses[0].id %>
<br>

<!--<div class="yelp-image"><%= image_tag @mood.searchYelp(current_user).businesses[0].image_url %></div><br>-->
<div class="snippet"><%= @mood.searchYelp(current_user).businesses[0].snippet_text %></div><br>
<%#= @mood.searchYelp(current_user).inspect %>


<%#= image_tag @mood.photo %>
	
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">More Options</h4>
      </div>
      <div class="modal-body">
        <div id="share" class="form-group"><%= link_to "Text this to a friend", share_path(url: @mood.searchYelp(current_user).businesses[0].url), :class => "btn btn-primary form-control taller-buttons" %></div>
        <div id="yelp" class="form-group"><%= link_to "View this on Yelp", @mood.searchYelp(current_user).businesses[0].url, :class => "btn btn-danger form-control taller-buttons" %></div>
        <!--<div id="map" class="form-group"><%#= link_to "Get directions", directions_path, :class => "btn btn-success form-control taller-buttons" %></div>-->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<% else %>
  <p class="no-results">Dang it! No local matches for <%= @mood.name %>. Consider exploring a new neighborhood by <%= link_to "updating your default profile location", edit_user_path(current_user) %> in increasing how far you're willing to go.</p>
  <% end %>
