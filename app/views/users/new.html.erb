<div id="sign-up" class="container">
<h1>Sign Up</h1>

<%= form_for @user do |f| %>
	<%= f.label :name %><%=@user.errors.messages[:name].join(" AND ") %> 
	<%= f.text_field :name, class: 'form-control bottom-buffer' %>

	<%= f.label :email %><%=@user.errors.messages[:email].join(" AND ") %>
	<%= f.text_field :email, class: 'form-control bottom-buffer' %>

	<%= f.label :password %><%=@user.errors.messages[:password].join(" AND ") %>
	<%= f.password_field :password, class: 'form-control bottom-buffer' %>

	<%= f.label :password_confirm %><%=@user.errors.messages[:password_confirm].join(" AND ") %>
	<%= f.password_field :password_confirm, class: 'form-control bottom-buffer' %>

	<%= f.label :zip %><%=@user.errors.messages[:zip].join(" AND ") %>
	<%= f.text_field :zip, class: 'form-control bottom-buffer', maxlength: 5 %>

	<%= f.label :bio %> 
	<%= f.text_field :bio, class: 'form-control bottom-buffer', maxlength: 140 %>

	<%= f.label :radius %> 
	<%#= f.text_field :radius, class: 'form-control', maxlength: 5 %>
    <%= f.select :radius, [['I only want walkable places','1000'],['I can hop on a bike','6000'],['Whatever it takes!','10000']], {}, class: 'form-control' %>
<br>
<br>
	<%= f.submit "Create New User", class: "btn btn-primary btn-lg" %> <% if !logged_in? %>or <%= link_to "Sign In", sessions_path, class: "btn btn-default btn-lg" %><% end %>
	<br>
	<br>

<% end %>
</div>

<%= debug(@user.errors) %>