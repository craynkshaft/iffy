<div id="profile" class="container">
	<div class="row">
		<div class="col-sm-4">
			<img class = "avatar" src="<%= @user.gravatar(@user.email) %>?s=250">
			<strong><p><%= @user.name %></strong>
			<%= link_to "Edit Profile", edit_user_path(@user) if current_user.id == @user.id || current_user.access == 'admin' %><br><%= current_user.zip.to_s.to_region %></p>
			<h3><%= @user.bio %></h3>
		</div>
		<div class="col-sm-8 latest-moods">
			<p><strong>Latest Moods: </strong>
	  		<% current_user.moods.order("created_at desc").take(20).each do |mood| %>
			<li> 
				<%= link_to mood.name, discover_path(mood) %> - <%= mood.description %> 
			</li>
			<% end %>
		  	</p>
		</div>
	</div>
</div>
