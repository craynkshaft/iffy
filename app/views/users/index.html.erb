<% if logged_in? && current_user.access == 'admin' %>

<div id="users" class="container">
<div class="form-group">
<h1>Users</h1>
<%= link_to "Create a New User", signup_path, :class => "btn btn-primary" %>
</div>
<table>
	<tr>
		<th>Created</th>
		<th>Name</th>
		<th>Email</th>
		<th>Zip</th>
		<th>Places</th>
		<th>Moods</th>
		<th>Radius</th>
		<th>Access</th>
		<th></th>
	</tr>
	<ul>
	<!-- LIST OF SEARCHES -->
	<% @users.order("created_at desc").each do |user| %>
	<tr>
		<td><%= user.created_at %></td>
		<td><%= link_to user.name, user_path(user) %></td>
		<td><%= user.email %></td>
		<td><%= user.zip %></td>
		<td><%#= user.places %></td>
		<td><%#= user.moods %></td>
		<td><%= user.radius %></td>
		<td><%= user.access %></td>
		<td><%= link_to "Edit", edit_user_path(user) %> | <%= link_to "Delete", user, 
		method: :delete, data: { confirm: 'Are you sure you want to delete this user?'} %></td>
	</tr>
	<% end %>
</ul>
</table>
</div>
<% else %>
Sorry, not for you.
<% end %>
