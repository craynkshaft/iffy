<div id="users" class="container">
<%= link_to "Create a New User", signup_path %><br>

<h1>Users</h1>
<table>
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>Location</th>
		<th>Places</th>
		<th>Moods</th>
		<th>Radius</th>
		<th>Access</th>
		<th></th>
	</tr>
	<ul>
	<!-- LIST OF SEARCHES -->
	<% @users.each do |user| %>
	<tr>
		<td><%= link_to user.name, edit_user_path(user) %></td>
		<td><%= user.email %></td>
		<td><%= user.zip %></td>
		<td><%= user.places %></td>
		<td><%= user.moods %></td>
		<td><%= user.radius %></td>
		<td><%= user.access %></td>
		<td><%= link_to 'Edit', edit_user_path(user) %> | <%= link_to "Delete", @user, 
		method: :delete, data: { confirm: 'Are you sure you want to delete this user?'} %></td>
	</tr>
	<% end %>
</ul>
</table>
</div>
<br>
